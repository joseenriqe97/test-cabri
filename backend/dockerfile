# Utilizamos una imagen base de Golang
FROM golang:1.23-alpine

# Establecemos el directorio de trabajo dentro del contenedor
WORKDIR /app

COPY ./pkg/infrastructure/migrations /app/test-cabri/backend/pkg/infrastructure/migrations

# Copiamos el archivo go.mod desde el subdirectorio backend
COPY go.mod .

# Copiamos el c贸digo fuente al directorio de trabajo
COPY . .

RUN ls -R /app

#Argumentos
ARG DATABASE_HOST
ARG DATABASE_USER
ARG DATABASE_PASSWORD
ARG DATABASE_DB_NAME
ARG AUTH_TOKEN
ARG URL_PLD

# Establecemos las variables de entorno
ENV DATABASE_HOST=$DATABASE_HOST
ENV DATABASE_USER=$DATABASE_USER
ENV DATABASE_PASSWORD=$DATABASE_PASSWORD
ENV DATABASE_DB_NAME=$DATABASE_DB_NAME
ENV AUTH_TOKEN=$AUTH_TOKEN
ENV URL_PLD=$URL_PLD
# Instalamos las dependencias
RUN go mod download

# Construimos la aplicaci贸n
RUN go build -o main cmd/main.go

# Exponemos el puerto (si tu aplicaci贸n escucha en un puerto)
EXPOSE 3001

# Comando para ejecutar la aplicaci贸n
CMD ["./main"]
